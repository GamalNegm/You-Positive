<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_navigation_drawer"
    tools:context="com.example.prog.bloodshare.Fragments.NavegationDrawerFragment"
    android:background="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/wallpaper"
    android:id="@+id/wallpaper"
    android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LogOut"
        android:id="@+id/ChatRooms"
        android:paddingBottom="7.5dp"
        android:paddingTop="7.5dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_photo_library_black_24dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Chat Rooms"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/iron"
        android:layout_below="@+id/LogOut"
        android:layout_marginTop="-2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallpaper"
        android:id="@+id/LogOut"
        android:paddingBottom="7.5dp"
        android:paddingTop="7.5dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_settings_black_24dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
