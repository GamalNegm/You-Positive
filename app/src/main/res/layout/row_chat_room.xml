<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <RelativeLayout
        android:id="@+id/rllt_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/img_group_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_chat_room" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/img_group_icon"
            android:layout_toRightOf="@id/img_group_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Chat Room Name"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/rllt_body"
        android:layout_marginTop="6dp"
        android:background="@color/colorDivider" />

</RelativeLayout>